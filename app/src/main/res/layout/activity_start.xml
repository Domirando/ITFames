<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/startbg_200"
    android:id="@+id/startwindow"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/img"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stevewithoutbg"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonVisaProgress"
            android:layout_width="230dp"
            android:paddingHorizontal="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginBottom="15dp"
            android:onClick="user"
            android:text="Login as User"
            android:textColor="@android:color/white"
            tools:ignore="MissingConstraints" />
        <Button
            android:layout_below="@+id/buttonVisaProgress"
            android:paddingHorizontal="50dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:onClick="admin"
            android:text="Login as Admin"
            android:textColor="@android:color/white"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>
</RelativeLayout>